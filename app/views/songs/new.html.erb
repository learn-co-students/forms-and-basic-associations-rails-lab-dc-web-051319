<h1><center>Add a New Song</center></h1>

<%= form_for @song  do |f| %>
    <h3><%= f.label :title, "Title:" %>
    <%= f.text_field :title %>

    <%= f.label :artist_name, "Artist:" %>
    <%= f.text_field :artist_name, list: "artists_autocomplete" %>
    <datalist id="artists_autocomplete">
        <% Artist.all.each do |artist| %>
            <option value="<%= artist.name %>">
        <% end %>
    </datalist>

    <%= f.label :genre_name, "Genre:" %>
    <%= f.collection_select :genre_id, Genre.all, :id, :name, {:prompt => "Choose a Genre"} %>

    Note1: <input name='song[note_contents][]' id='song_notes_1'>
    Note2: <input name='song[note_contents][]' id='song_notes_2'> 
    Note3: <input name='song[note_contents][]' id='song_notes_3'>

    <%= f.submit "Add" %></h3>
<% end %>