<h1>Create a Song</h1>

<%= form_for @song  do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <br />
  <%= f.label :artist_name %>
  <%= f.text_field :artist_name, list: "artists_autocomplete" %>
  <datalist id="artists_autocomplete">
    <% Artist.all.each do |artist| %>
      <option value="<%= artist.name %>">
    <% end %>
  </datalist>
  <br />
  <%= f.label :genre_name %>
  <%= f.collection_select :genre_id, Genre.all, :id, :name %>
  <h3>Notes:</h3>
  <input type="text" name="song[note_contents][]" id="song_notes_1">
  <h3>Notes 2:</h3>
  <input type="text" name="song[note_contents][]" id="song_notes_2">
  <br />
  <br />

  <%= f.submit %>
<% end %>


